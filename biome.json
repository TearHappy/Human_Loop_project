{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"References/**",
			"node_modules/**",
			".next/**",
			"dist/**",
			"build/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnknownFunction": "off",
				"useExhaustiveDependencies": "warn"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "warn",
				"useKeyWithClickEvents": "warn",
				"useButtonType": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			},
			"suspicious": {
				"noThenProperty": "off",
				"noArrayIndexKey": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
